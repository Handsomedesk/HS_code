<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Community Page</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/noticeboard">Noticeboard</a></li>
                <li><a href="/trainers">Trainers</a></li>
                <li><a href="/myinfo">My Info</a></li>
                <li><a href="/dogencyclopedia">Dog Encyclopedia</a></li>
                
            </ul>
        </nav>
    </header>

    <div class="container">
        <h2>Noticeboard</h2>
        <div class="content">
            <table>
                <tr>
                    <th>Name</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Write Time</th>
                    <th>Update Time</th>
                </tr>
                <% noticeboard.forEach((post) => { %>
                    <tr>
                        <td><%= post.nick_name %></td>
                        <td><%= post.title %></td>
                        <td><%= post.description %></td>
                        <td><%= new Date(post.write_time).toLocaleString() %></td>
                        <td><%= new Date(post.update_time).toLocaleString() %></td>
                    </tr>
                <% }); %>
            </table>
            <ul>
                <% noticeboard.forEach((post) => { %>
                <% }); %>
            </ul>
        </div>
    </div>
</body>
</html>
